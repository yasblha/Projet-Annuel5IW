{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "../..",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "../../Database",
    "../../application",
    "../../domain",
    "../../infrastructure"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
